---
import Layout from '../layouts/Layout.astro';
import Display from "../components/Display.astro";
import ScrollToTop from "../components/ScrollToTop.astro";

const dexProject = {
    projectName: 'Dex',
    description: 'Dex is an application that enables users to monitor and manage data, ranging from personal weight tracking to tracking time spent on specific activities. With Dex, users have the ability to create personalized tables and dashboards, facilitating convenient organization, sorting, and visualization of their data.',
    technologies: ['Typescript', 'Angular', 'Java', 'Spring Framework', 'Kubernetes', 'Docker'],
    image: {src: `dex.png`, alt: 'Dex image'},
    link: 'https://dex.minibuilds.io/login'
}
const steamProject = {
    projectName: 'Steam Game Picker',
    description: 'The Steam Game Picker is a web application designed to randomly select a game from a user\'s Steam library.',
    technologies: ['Typescript', 'Angular', 'Java', 'Spring Framework', 'Kubernetes', 'Docker'],
    image: {src: `steam-game-picker.png`, alt: 'Steam game picker image'},
    link: 'https://steam.minibuilds.io/'
}
---

<Layout title="Welcome."
        tabTitle="Welcome"
        description="Welcome to my website built using the Astro Framework. While it's still a work in progress, my goal is to capture and share my journey, learning experiences, and projects.">

    <main>
        <div class="projects" style="display: flex">
            <div class="padding-bottom-large">
                <h1 class="text-gradient">My Projects</h1>
                <p c>
                    In my spare time over the last year, I have dedicated myself to contributing to various projects for
                    <a href="https://www.minibuilds.io/"> <b>Minibuilds</b></a>, a software hobby project that I
                    undertake with a friend. These projects have allowed us to
                    explore new avenues of creativity, and have been a source of fulfillment and
                    satisfaction.
                </p>
                <ScrollToTop/>
                <p><b>These include:</b></p>
            </div>
            <div class="project-line margin-bottom-small"></div>

            <Display listItem={dexProject.technologies}
                     image={dexProject.image}
                     description={dexProject.description}
                     link={dexProject.link}
                     projectName={dexProject.projectName}>
            </Display>

            <div class="project-line margin-bottom-small"></div>

            <Display listItem={steamProject.technologies}
                     image={steamProject.image}
                     description={steamProject.description}
                     link={steamProject.link}
                     projectName={steamProject.projectName}
            />

            <div class="project-line"> </div>


            </div>


    </main>
</Layout>

<style>
    body {
        font-family: 'Atkinson Hyperlegible', serif;
        margin: 0;
        padding: 0;
    }

    h1 {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    .introduction {
        display: flex;
        font-size: 1.2rem;
        font-weight: 400;
        margin-bottom: 2rem;
    }

    .project {
        display: flex;
        flex-direction: column;
        margin-bottom: 2rem;
    }

    h2 {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    a {
        text-decoration: none;
        color: var(--primary);
    }

    a:hover {
        text-decoration: underline;
    }

    p {
        font-size: 1.2rem;
        line-height: 1.5;
        margin-bottom: 0.5rem;
        color: var(--primary);
    }

    ul {
        margin-bottom: 1rem;
        padding-left: 2rem;
    }

    li {
        font-size: 1.2rem;
        line-height: 1.5;
        list-style-type: disc;
        margin-bottom: 0.5rem;
    }

    .projects {
        display: flex;
        flex-direction: column;
        align-items: start;
    }

    .project-image {
        max-width: 100%;
        display: flex;
    }

    @media (max-width: 400px) {
        .project-image {
            max-width: 300px;
        }
    }

    .note {
        font-size: 0.9rem;
        font-style: italic;
        color: #888;
        margin-top: 2rem;
    }

    .project-line {
        border-bottom: 2px solid var(--primary);
        width: 100%;
    }

</style>
