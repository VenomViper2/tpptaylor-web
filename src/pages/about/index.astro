---
import Layout from "../../layouts/Layout.astro";
---


<Layout title="About me" description="I'm Tom, a developer with a passion for learning and coding!">
    <main>
        <div class="projects" style="display: flex">
            <h1 class="text-gradient">Work in Progress</h1>
            <p style="padding-top: 3rem">TBC</p>
        </div>


    </main>
</Layout>

<style>

    h1 {
        font-size: 3rem;
        font-weight: 800;
        margin: 0;
    }

    .text-gradient {
        background-image: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }

    .introduction {
        font-size: 1.3rem;
        font-weight: 200;
        margin-top: 3rem;
    }

    .projects {
        display: flex;
        flex-direction: column;
        align-items: start;
    }
</style>
