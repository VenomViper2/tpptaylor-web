---
import Title from "./Title.astro";

export interface Props {
    description: string;
    title: string;
}




const {description, title} = Astro.props;
---


<section id="hero">
    <div class="hero-container">
        <div class="navbar">
            <div class="logo">
                <a href="/">
                    <img src=`${import.meta.env.BASE_URL}logo-no-background.svg` alt="logo" width="100px"/>
                </a>
            </div>
            <div class="menu">
                <a href="/">Home</a>
                <a href="/about">About</a>
                <a href="/contact">Contact</a>
            </div>

        </div>
        <!-- hero content -->
        <div class="hero-box">
            <h1 class="hero-heading"><Title title={title}/></h1>
            <p class="hero-desc">{description}</p>
        </div>
    </div>
</section>

<style>
    #hero {
        width: 100%;
        height: 100vh;
        min-height: 700px;
        background-size: contain;
        padding-top: 32px;
        padding-left: 32px;
        background: url(/src/assets/images/hero-banner-2.png) bottom no-repeat;
    }

    .logo {
        display: flex;
        align-items: center;
    }


    .hero-container {
        max-width: 1140px;
        margin: 0 auto;
    }


    .navbar {
        display: flex;
        justify-content: space-between;
        margin-bottom: 100px;
    }

    .navbar .menu a {
        color: #01161E;
        font-size: 1.2rem;
        transition-duration: 0.4s;
        letter-spacing: 1px;
        text-decoration: none;
        margin-right: 20px;
    }


    .navbar .menu {
        color: #01161E;
        font-size: 14px;
        border-radius: 50px;
        text-decoration: none;
        padding: 10px 20px;
        justify-content: center;
    }


    .hero-box {
        width: 75%;
        margin-top: 200px;

    }

    .hero-box .hero-heading {
        color: #01161E;
        font-size: 50px;
        line-height: 65px;
    }

    .hero-box .hero-desc {
        color: #01161E;
        font-size: 18px;
        line-height: 27px;
        padding: 30px 0;
        display: flex;
    }


</style>
