---
import Title from "./Title.astro";
import Description from "./Description.astro";

export interface Props {
    description: string;
    title: string;
}




const {description, title} = Astro.props;
---



<section id="hero" >
    <div class="hero-container">
        <div class="navbar">
            <div class="menu">
                <a href="/">Home</a>
                <a href="/about">About</a>
                <a href="/contact" class="btn-special">Contact</a>
            </div>

        </div>
        <!-- hero content -->
        <div class="hero-box">
            <h1 class="hero-heading"><Title title={title}/></h1>
            <p class="hero-desc">{description}</p>
        </div>
    </div>
</section>

<style>
    #hero {
        width: 100%;
        height: 100vh;
        background-size: cover;
        padding-top: 32px;
        background: linear-gradient(rgba(0, 0, 0, 0.60), rgba(0, 0, 0, 0.60)), url(/tokyo-hero.jpg);
        background-position: center center;
        transform: translateY(0);
        transition: all 0.8s ease-in-out;

    }




    .hero-container {
        max-width: 1140px;
        margin: 0 auto;

    }


    .navbar {
        display: flex;
        justify-content: space-between;
        margin-bottom: 100px;
    }

    .navbar .menu a:not(:last-child) {
        color: #ffffff;
        margin-left: 20px;
        font-size: 14px;
        transition-duration: 0.4s;
        letter-spacing: 1px;
        text-decoration: none;
    }


    .navbar .menu .btn-special {
        color: #ffffff;
        margin-left: 20px;
        padding: 10px 25px;
        font-size: 14px;
        border-radius: 50px;
        text-decoration: none;
    }


    .hero-box {
        width: 50%;
        margin-top: 200px;
    }

    .hero-box .hero-heading {
        color: #ffffff;
        font-size: 50px;
        line-height: 65px;
    }

    .hero-box .hero-desc {
        color: #ffffff;
        font-size: 18px;
        line-height: 27px;
        padding: 30px 0;
    }

    @media (max-width: 768px) {
        #hero {
            padding: 32px 16px;
        }

        .hero-container {
            padding: 0 16px;
        }
    }


</style>
